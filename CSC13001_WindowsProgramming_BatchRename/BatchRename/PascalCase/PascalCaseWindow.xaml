<Window x:Class="PascalCase.PascalCaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PascalCase"
        mc:Ignorable="d"
        Title="PascalCaseWindow" Height="450" Width="800">
    <Canvas>
        <Label Canvas.Left="100" Canvas.Top="100" Content="String you want to convert to PascalCase"/>
        <TextBox Canvas.Left="100" Canvas.Top="125" Height="30" Width="300" Name="edtOriginal"/>  
        <Button Canvas.Left="200" Canvas.Top="175" Content="Convert" Name="btnConvert" Click="BtnConvert_Click"/>
        <Label Canvas.Left="100" Canvas.Top="210" Height="30" Name="txtResult"/>
    </Canvas>
</Window>
