<Window x:Class="Replace.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Replace"
        mc:Ignorable="d"
        Title="ReplaceWindow" Height="450" Width="800">
    <Canvas>
        <Label Canvas.Left="100" Canvas.Top="100" Content="String you want to convert"/>
        <TextBox Canvas.Left="100" Canvas.Top="130" Height="30" Width="300" Name="edtString"/>
        <Label Canvas.Left="100" Canvas.Top="175" Content="Character you want to replace"/>
        <TextBox Canvas.Left="100" Canvas.Top="200" Height="30" Width="300" Name="edtCharReplace"/>
        <Label Canvas.Left="100" Canvas.Top="240" Content="Character replaces old character"/>
        <TextBox Canvas.Left="100" Canvas.Top="275" Height="30" Width="300" Name="edtReplacer"/>
        <Button Canvas.Left="100" Canvas.Top="320" Name="BtnConvert" Content="Convert" Click="BtnConvert_Click"/>
        <Label Canvas.Left="100" Canvas.Top="350" Name="txtResult" Content="This is result"/>
    </Canvas>
</Window>
