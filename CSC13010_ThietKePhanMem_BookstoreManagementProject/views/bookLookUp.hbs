<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    {{>css}}

    <title>Tra cứu sách</title>
</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        {{>(nav)}}
        <!-- Page Content  -->
        <div id="content">
            <form action="/bookLookUp/search" method="get" class="form-inline my-2 my-lg-0">
                <div class="row">
                    <div class="col-md-7">

                        <input name="search" class="form-control mr-sm-2 w-100" type="search"
                            placeholder="Tên sách/Tác giả/Thể loại" aria-label="Search" style="display: inline-block;">
                    </div>
                    <div class="col-md-2">
                        <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Tra cứu">

                    </div>
                </div>
            </form>
            <div class="row my-5">
                <div class="col-md-12">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Tên sách</th>
                                <th scope="col">Tác giả</th>
                                <th scope="col">Thể loại</th>
                                <th scope="col">Đơn giá</th>
                                <th scope="col">Lượng tồn</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if this.empty}}
                            <div class="card-body">
                                <p class="card-text">Không có dữ liệu.</p>
                            </div>
                            {{else}}
                            {{#each this.bookLookUps }}
                            <tr>
                                <th scope="row" id="{{this.Id}}-nameBook">{{this.TenSach}}</th>
                                <td id="{{this.Id}}-authorBook">{{this.TacGia}}</td>
                                 <td id="{{this.Id}}-typeBook">{{this.TheLoai}}</td>
                                <td id="{{this.Id}}-priceBook">{{this.DonGia}}</td>
                                <td id="{{this.Id}}-amountBook">{{this.LuongTon}}</td>
                            </tr>
                            {{/each}}

                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>