<Window x:Class="Login.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="ConfigWindow" 
        Height="600" Width="800"
        >

    <Canvas>
        <Label Content="_Username:" Target="{Binding ElementName=usernameTextBox}" Canvas.Left="110" Canvas.Top="133"></Label>
        <TextBox x:Name="usernameTextBox" Text="{Binding Fullname}" Width="344" Height="35" Canvas.Left="110" Canvas.Top="164"/>



        <Label Content="_Password:" Target="{Binding ElementName=passwordBox}" Canvas.Left="110" Canvas.Top="217"></Label>
        <PasswordBox x:Name="passwordBox" Width="344" Height="35" Canvas.Left="110" Canvas.Top="261"/>
        <Button x:Name="okButton" Width="80" IsDefault="True" Height="35" Content="OK" Canvas.Left="143" Canvas.Top="364" 
                Click="okButton_Click"/>
        <Button x:Name="cancelButton" IsCancel="True" Width="80" Height="35" Content="Cancel" Canvas.Left="445" Canvas.Top="364"/>
 

    </Canvas>
</Window>
