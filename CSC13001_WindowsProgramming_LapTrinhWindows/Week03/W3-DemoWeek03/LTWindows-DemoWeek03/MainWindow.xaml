<Window x:Class="LTWindows_DemoWeek03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTWindows_DemoWeek03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Icon="/images/1.jpg"
        Loaded="Window_Loaded"
    >
    <Canvas Name="MotherCanvas">

        <Label Target="{Binding ElementName=usernameTextBox}" Content="_username" RenderTransformOrigin="1.981,2.602" Height="29" Width="403" Canvas.Left="220" Canvas.Top="66"></Label>
        <TextBox x:Name="usernameTextBox" Width="191" Height="27" TextChanged="userName_TextChanged" Canvas.Left="212" Canvas.Top="110"/>

        <Button Name="TestButton" Width="80" Height="35" 
                 Click="TestButton_Click" Loaded="TestButton_Loaded" Canvas.Left="227" Canvas.Top="178">
            <StackPanel Orientation="Horizontal">
                <Image Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,5,0" Source="images/1.jpg" />
                <Label Content="Test"/>
            </StackPanel>
        </Button>



    </Canvas>
</Window>
