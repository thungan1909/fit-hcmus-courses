<Fluent:RibbonWindow x:Class="MobilePhones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobilePhones"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="RibbonWindow_Loaded">
    <Window.Resources>
        <local:RelativeToAbsoluteConverter x:Key="AbsoluteConverter"/>
        <local:ConverterToVND x:Key="VNDConverter"></local:ConverterToVND>
    </Window.Resources>
    <StackPanel>
        <Fluent:Ribbon>
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage Header="Home">
                    <Fluent:BackstageTabControl>
                        <Fluent:BackstageTabItem Header="Add">
                            <StackPanel>
                                <Label Content="Bạn hãy click vào nút Add này để thêm 1 chiếc điện thoại nè :>" Width="1000" Height="30"  ></Label>
                                <Button Name="addButton" Width="80" Height="35" Content="Add" RenderTransformOrigin="2.01,7.983" 
                                       Canvas.Left="200" Canvas.Top="359"
                                        Click="addButton_Click"/>
                            </StackPanel>
                        </Fluent:BackstageTabItem>
                        <Fluent:BackstageTabItem Header="Update">
                            <StackPanel>
                                <Label Content="Bạn hãy chọn 1 chiếc điện thoại, sau đó click vào nút Update này để thay bằng 1 chiếc điện thoại khác nhá :>" Width="1000" Height="30"></Label>
                                <Button Name="updateButton" Width="80" Height="35" Content="Update"
                                Click="updateButton_Click" RenderTransformOrigin="5.794,6.05" Canvas.Left="591" Canvas.Top="358"/>
                            </StackPanel>
                        </Fluent:BackstageTabItem>
                        <Fluent:BackstageTabItem Header="Delete">
                            <StackPanel>
                                <Label Content="Bạn hãy chọn 1 chiếc điện thoại bạn muốn xoá, sau đó click vào nút Delete để xoá nhá :>" Width="1000" Height="30"></Label>
                                <Button Name="deleteButton" Width="80" Height="35" Content="Delete"
                Click="deleteButton_Click" RenderTransformOrigin="5.794,6.05" Canvas.Left="407" Canvas.Top="358"/>
                            </StackPanel>
                        </Fluent:BackstageTabItem>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
        </Fluent:Ribbon>
        <Canvas>
            <ListView Name="MobilePhoneList" 
                  Width="753" Height="249"
                  Canvas.Left="25" Canvas.Top="25" 
                  RenderTransformOrigin="0.476,-1.233"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  >
                <ListView.Resources>
                    <ContextMenu x:Key="PhoneContext">
                        <MenuItem Header="Delete" Click="deleteMenuItem_Click"/>
                    </ContextMenu>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource PhoneContext}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="200" Height="150">
                            <Image Margin="0,0,5,0" 
                               Source="{Binding PhoneImage,Converter={StaticResource AbsoluteConverter}}"
                               Width="70" Height="70"
                            RenderOptions.BitmapScalingMode="HighQuality">
                            </Image>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                          <Run Text="{Binding PhoneName}" Foreground="Red"
                               FontWeight="Bold" FontFamily="Tahoma"></Run>   
                            <LineBreak/>
                            <Run Text="{Binding Manufacture}" Foreground="Blue" FontWeight="Bold"></Run>
                            <LineBreak/>
                            <Run Text="{Binding Price,  Converter={StaticResource VNDConverter}}" Foreground="Black" FontWeight="Bold"></Run>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Canvas>
    </StackPanel>
</Fluent:RibbonWindow>
